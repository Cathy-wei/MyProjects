@{
    ViewBag.Title = "关于";
}
@model IEnumerable<MyBlog.Models.Links>
    <style type="text/css">
        .circle {
            width: 410px;
            height: 398px;
            background-image: url('../../Content/pictures/touxiang.png');
            background-size: 100%;
            background-position: center;
            background-repeat: no-repeat;
            /* background: white; */
            box-shadow: 0px 0px 40px black;
            border-radius: 400px;
            margin: 10px 60px;
            /* display: none; */
        }

            .circle:hover {
                box-shadow: #000000 0px 0px 80px;
                animation: myimg 0.5s ease;
            }

        @@keyframes myimg {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }


        #ar {
            position: relative;
            /*left: 100px;
        top: 80px;*/
            left: 100px;
            top: 100px;
            font-size: 15px;
        }

            #ar p:hover {
                cursor: pointer;
                font-size: 17px;
                text-shadow: #1A1A1A 2px 3px 10px;
            }

        .head {
            position: relative;
            top: -60px;
            text-align: center;
        }

        .FriendLink {
            width: 500px;
            height: 400px;
            border: dotted #ffffff 2px;
            background-color: transparent;
            /*box-shadow: 0px 0px 40px black;*/
            border-radius: 40px;
            margin: 10px 60px;
            text-align: center;
            font-size: 15px;
            color: #ffffff;
        }

            .FriendLink > label {
                padding: 10px;
                font-size: 20px;
                margin: 0 auto;
                font-weight: 400;
            }

            .FriendLink > p {
                border: dotted 1px #ffffff;
            }

        .link {
            position: relative;
            margin: 5px;
            text-decoration: none;
            border-radius: 40px;
            padding: 5px;
            display: inline-block;
            box-shadow: 0px 0px 20px 4px #0000003b;
        }

            .link:visited {
                text-decoration: none;
                color: rgba(255, 255, 255, 0.9);
            }

            .link:hover {
                text-decoration: none;
                cursor: pointer;
                box-shadow: 0px 0px 20px 4px #0000007a;
            }

            .link:active {
                text-decoration: none;
                box-shadow: inset 0 0 5px 1px #46464661;
            }

        .all {
            display: flex;
            flex-direction: row;
            padding: 10px;
        }
    </style>
    <h2 class="head">@ViewBag.Title.</h2>
    <div class="all">
        <div class="circle">
            <div id="ar">
                <p> 作者：2017级 软件工程 韦仲茜</p>
                <p> 时间：2017.06.12</p>
                <p> Copyright © 瑙墨岩</p>
            </div>

        </div>
        <div class="FriendLink">
            <label>友链</label>
            <p></p><br />
            @foreach (var item in Model)
            {
                ViewBag.url = item.address;
        <a class="link" href="" target="_blank" onclick="jump('@item.address')">@Html.DisplayFor(modelItem => item.name)</a>
            }


        </div>
    </div>
<script>
    function jump(address) {
        window.open("http://" + address)
    }
</script>
 
